{
  "name": "claudeops",
  "version": "2.0.0",
  "type": "module",
  "description": "Batteries-included Claude Code enhancement toolkit - orchestration, guardrails, profiles, and configuration management",
  "author": "Amaan",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/goamaan/claudeops.git"
  },
  "bugs": {
    "url": "https://github.com/goamaan/claudeops/issues"
  },
  "homepage": "https://github.com/goamaan/claudeops#readme",
  "bin": {
    "claudeops": "./dist/cli.mjs",
    "cops": "./dist/cli.mjs",
    "co": "./dist/cli.mjs"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.mts",
      "import": "./dist/index.mjs"
    }
  },
  "files": [
    "dist",
    "setups",
    "addons",
    "agents",
    "skills",
    "hooks"
  ],
  "scripts": {
    "dev": "tsdown --watch",
    "build": "tsdown",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src/",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:unit": "vitest run --dir src/",
    "test:integration": "vitest run --dir tests/integration/",
    "test:e2e": "vitest run --dir tests/e2e/",
    "verify": "bun run typecheck && bun run lint && bun run test"
  },
  "dependencies": {
    "@clack/prompts": "^0.10.0",
    "@ltd/j-toml": "^1.38.0",
    "citty": "^0.1.6",
    "cosmiconfig": "^9.0.0",
    "listr2": "^8.2.5",
    "picocolors": "^1.1.1",
    "semver": "^7.6.3",
    "tar": "^7.4.3",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@types/bun": "^1.1.14",
    "@types/node": "^22.10.2",
    "@types/semver": "^7.5.8",
    "@typescript-eslint/eslint-plugin": "^8.18.1",
    "@typescript-eslint/parser": "^8.18.1",
    "@vitest/coverage-v8": "^2.1.8",
    "conventional-changelog-conventionalcommits": "^9.1.0",
    "eslint": "^9.17.0",
    "prettier": "^3.4.2",
    "semantic-release": "^25.0.2",
    "tsdown": "^0.19.0",
    "typescript": "^5.7.2",
    "vitest": "^2.1.8"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
