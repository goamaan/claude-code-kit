[addon]
name = "{{name}}"
version = "1.0.0"
description = "{{description}}"
author = "{{author}}"
license = "MIT"
keywords = []

# Version requirements (optional)
# [requires]
# claude-kit = "^1.0.0"

# Hook definitions
[hooks]
PreToolUse = [
  { matcher = "Bash", handler = "./hook.ts", priority = 0 }
]

